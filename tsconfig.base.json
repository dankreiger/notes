{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@notes/shared/i18n": ["libs/shared/i18n/src/index.ts"],
      "@notes/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@notes/songs/schemas": ["libs/songs/schemas/src/index.ts"],
      "@notes/songs/trpc-client": ["libs/songs/trpc-client/src/index.ts"],
      "@notes/songs/trpc-server": ["libs/songs/trpc-server/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
